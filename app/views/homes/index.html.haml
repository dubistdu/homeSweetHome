
#coverimage.img-responsive

.container
  .page-header.text-center.index-header
    %h2 Homes for sale
.container
  .row.center
    - @homes.each do |home|
      .col-lg-6.col-md-6.col-sm-6.col-xs-12
        = link_to home do
          .homeframe
            - if home.images
              .image-container.img
                = image_tag attachment_url(home, :images), size: "500x345", class: "home_image_thumb"
                -# it's not @home because we are iterating thru |home|
              .homeprofile
                %h2
                  = " $"
                  = home.price
                %p
                  = home.address
                %p
                  = home.number_of_bedrooms
                  = "beds / "
                  = home.number_of_bathrooms
                  = " bths / "
                  = home.square_foot
                  = " sqf "
                  - if home.swimming_pool? == true
                    = " / Swimming pool: Yes"
                  - else
                    = ""
