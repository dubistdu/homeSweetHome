.container
  .page-header
    = link_to homes_path, class: 'btn btn-default' do
      %span.glyphicon.glyphicon-list-alt
      Back

    -#   *** edit option ***
    -# = link_to edit_home_path(@home), class: 'btn btn-primary' do
    -#   %span.glyphicon.glyphicon-pencil
    -#   Edit
  .container
    .row
      .col-md-4.col-sm-6
        %dl.dl-horizontal
          %dt Address:
          %dd= @home.address
          %dt Number of bedrooms:
          %dd= @home.number_of_bedrooms
          %dt Number of bathrooms:
          %dd= @home.number_of_bathrooms
          %dt Square foot:
          %dd= @home.square_foot
          %dt Price:
          %dd= @home.price
          %dt Swimming pool:
          %dd= @home.swimming_pool
          %dt Parking garage:
          %dd= @home.parking_garage
          %dt Parking garage type:
          %dd= @home.parking_garage_type
          %dt Parking garage size:
          %dd= @home.parking_garage_size
          %dt Description:
          %dd= @home.description
      .col-xs-12.col-sm-12.col-md-6.col-lg-6
        .img-thumbnail{:style => "border:none; background:white;"}
          .image-container.img
            = image_tag attachment_url(@home, :images), size: "620x445", class: "home_image"
